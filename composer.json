{
    "name": "ueberdosis/html-to-prosemirror",
    "type": "library",
    "description": "Takes HTML and outputs ProseMirror compatible JSON.",
    "keywords": [
        "prosemirror"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Hans Pagel"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "friendsofphp/php-cs-fixer": "^2.15",
        "mrclay/minify": "^3.0"
    },
    "require-dev": {
        "league/climate": "^3.5",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Scrumpy\\HtmlToProseMirror\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Scrumpy\\HtmlToProseMirror\\Test\\": "tests/"
        }
    },
    "scripts": {
        "format": [
            "vendor/bin/php-cs-fixer fix"
        ]
    }
}
